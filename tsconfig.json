{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@dto/*": ["dto/*"],
            "@entities/*": ["entities/*"],
            "@repositories/*": ["repositories/*"],
            "@services/*": ["services/*"],
            "@error/*": ["error/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    }
}
